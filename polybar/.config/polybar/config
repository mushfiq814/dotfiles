; }}}

; wlan {{{
[module/wlan]
type = internal/network
interface = wlp0s20f3
interval = 3.0
; All labels support the following tokens:
;   %ifname%    [wireless+wired]
;   %local_ip%  [wireless+wired]
;   %local_ip6% [wireless+wired]
;   %essid%     [wireless]
;   %signal%    [wireless]
;   %upspeed%   [wireless+wired]
;   %downspeed% [wireless+wired]
;   %linkspeed% [wired]
label-connected = %{F#fe8019}%{F-} %essid% %{F#fe8019}%{F-} %downspeed%
label-connected-foreground = ${colors.grey4}
label-disconnected = %{F#fe8019}睊%{F-} no internet
label-disconnected-foreground = ${colors.red1}
; }}}

; battery {{{
[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 101

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage%%
label-discharging-foreground = ${colors.grey4}

ramp-capacity-0 =  BAT
ramp-capacity-1 =  BAT
ramp-capacity-2 =  BAT
ramp-capacity-3 =  BAT
ramp-capacity-4 =  BAT
ramp-capacity-foreground = ${colors.accent}

format-charging = <animation-charging> <label-charging>
label-charging = %percentage%%
label-charging-foreground = ${colors.green1}
label-charging-font = 2

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.green0}
animation-charging-framerate = 750

label-full =  Full
label-full-font = 2
label-full-foreground = ${colors.green0}

; }}}

; date {{{
[module/date]
type = internal/date
interval = 1
; use `man date` to find out format options
date = "%a %Y-%m-%d"
time = %r
label = %{F#fe8019}%{F-} %date% %{F#fe8019}%{F-} %time%
label-foreground = ${colors.white}
; }}}

; powermenu {{{
[module/powermenu]
type = custom/menu
expand-right = true
format-spacing = 1

label-open = ⏻
label-open-foreground = ${colors.orange1}
label-close = 
label-close-foreground = ${colors.red1}
label-separator = |
label-separator-foreground = ${colors.grey4}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

