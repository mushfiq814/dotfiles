; mpv {{{
[module/mpv]
type = custom/script
tail = true
exec-if = pidof mpv
format-prefix = "ÔÄÅ  "
format-prefix-foreground = ${colors.accent}
format = <label>
exec = mpvctl meta

[module/mpv-prev]
type = custom/script
exec = echo "ÔÅà"
format = <label>
format-foreground = ${colors.accent}
click-left = mpvctl prev

[module/mpv-play-pause]
type = custom/ipc
hook-0 = echo "ÔÅå"
hook-1 = echo "ÔÅã"
format-foreground = ${colors.accent}
initial = 1
click-left = mpvctl toggle

[module/mpv-next]
type = custom/script
exec = echo "ÔÅë"
format = <label>
format-foreground = ${colors.accent}
click-left = mpvctl next
; }}}

