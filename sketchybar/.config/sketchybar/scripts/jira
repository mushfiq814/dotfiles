#     icon.color="0xff${YELLOW0:1}" \
#     label="Refresh" \
#     click_script="sketchybar -m --set $NAME popup.drawing=off; rm -rf \"$CACHE\" && export NAME=$NAME && $SCRIPTS/jira"

