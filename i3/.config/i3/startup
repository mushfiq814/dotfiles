# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# sensible scaling
exec --no-startup-id xrandr -s 1920x1080

# Start compton with custom config
exec --no-startup-id recomp

# Start polybar
exec --no-startup-id rebar

# Start feh for wallpapers
exec --no-startup-id feh --randomize --bg-fill ~/pictures/wallpapers-with-resolution/desktop

# Start syncthing
exec --no-startup-id syncthing

# start dunst (notification daemon)
exec --no-startup-id dunst

# start pulseaudio daemon
exec --no-startup-id pulseaudio -D

# Start terminal
exec --no-startup-id kitty

# screensaver
# exec --no-startup-id xset dpms 60
# exec --no-startup-id xautolock -time 1 -locker i3lock -i ~/Pictures/wallpapers/xcwwpikoxeh31.png -t -c '#000000'

