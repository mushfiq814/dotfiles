# window class name specific rules
for_window [class="^.*"] border pixel 0
for_window [class="floating"] floating enable, resize set 640 480

# assign workspace by window class/name
assign [class="qutebrowser"] workspace number 2
assign [class="firefox"] workspace number 2
assign [class="Spotify"] workspace number 3

# gaps
gaps inner 50
gaps outer 0

