#!/bin/sh

external_monitors() {
  xrandr                                                                 \
  --output DP-1-1 --primary --mode 2560x1440 --pos 0x240 --rotate normal \
  --output DP-3 --mode 1920x1080 --pos 2560x0 --rotate right             \
  --output eDP-1 --off                                                   \
  --output DP-1 --off                                                    \
  --output HDMI-1 --off                                                  \
  --output DP-2 --off                                                    \
  --output DP-4 --off                                                    \
  --output DP-1-2 --off                                                  \
  --output DP-1-3 --off                                                  \
  --output DVI-I-4-4 --off                                               \
  --output DVI-I-3-3 --off                                               \
  --output DVI-I-2-2 --off                                               \
  --output DVI-I-1-1 --off
}

laptop_monitor_only() {
  xrandr                                                    \
  --output eDP-1 --mode 1920x1200 --pos 0x0 --rotate normal \
  --output DP-1 --off                                       \
  --output HDMI-1 --off                                     \
  --output DP-2 --off                                       \
  --output DP-3 --off                                       \
  --output DP-4 --off                                       \
  --output DP-1-1 --off                                     \
  --output DP-1-2 --off                                     \
  --output DP-1-3 --off                                     \
  --output DVI-I-4-4 --off                                  \
  --output DVI-I-3-3 --off                                  \
  --output DVI-I-2-2 --off                                  \
  --output DVI-I-1-1 --off
}

case $1 in
  "laptop") laptop_monitor_only ;;
  "external") external_monitors ;;
  *) echo "Invalid Option. Please select either 'laptop' or 'external'" ;;
esac
