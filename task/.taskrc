# data
data.location=~/.task
# hooks.location=~/.config/task/hooks

# ui
row.padding = 20
column.padding = 2
recurrence.indicator = üîÅ
dependency.indicator = D
active.indicator = *

# settings
weekstart = monday
calendar.holidays = none

# colors
rule.color.merge = no

